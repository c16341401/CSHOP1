<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".postforsaleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/listingtitleet"
            android:background="@color/white"
            android:padding="10dp"
            android:hint="Enter Your Listing Title"
            android:textColor="@color/black"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <ImageView
            android:id="@+id/listingimageiv"
            android:background="@color/purple_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            ></ImageView>

        <EditText
            android:id="@+id/listingdescription"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="10dp"
            android:hint="Describe your product"
            android:inputType="textCapSentences|textImeMultiLine"
            android:minHeight="120dp"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <EditText
            android:id="@+id/listingpriceet"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="10dp"
            android:hint="Price your product"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a category"
                ></TextView>

            <Spinner
                android:id="@+id/categories"
                android:layout_marginLeft="20dp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"></Spinner>

        </LinearLayout>

        <Button
            android:id="@+id/publishlistingbtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Publish"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></Button>

    </LinearLayout>

</ScrollView>